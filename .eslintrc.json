{
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "data": true,
        "angular": true,
        "$": true,
        "ko": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}